npm init -y # crea package.json con tu proyecto.
npm install express cors dotenv //Dependencias principales (runtime)
npx tsc --init //inicalizar TypeScript, crea tsconfig.json con la configuración de compilación.
npm install -D typescript ts-node nodemon @types/node @types/express @types/cors
npm install prisma @prisma/client //CLI para manejar migraciones, modelo de datos, etc y Cliente que se usa en tu código para interactuar con la DB.
npm install -D @types/node
npx prisma init //inicializar prisma crea schema.prima y .env
npx prisma db pull //probar que conecta
npx prisma migrate dev --name init // para sincronizar y crear tablas


